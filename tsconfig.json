{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@the-new-datasite/shared/ui": ["libs/shared/ui/src/index.ts"],
      "@the-new-datasite/diligence/feature-shell": [
        "libs/diligence/feature-shell/src/index.ts"
      ],
      "@the-new-datasite/documents/feature-shell": [
        "libs/documents/feature-shell/src/index.ts"
      ],
      "@the-new-datasite/permissions/feature-shell": [
        "libs/permissions/feature-shell/src/index.ts"
      ],
      "@the-new-datasite/shared/theming": ["libs/shared/theming/src/index.ts"],
      "@the-new-datasite/acquire/feature-shell": [
        "libs/acquire/feature-shell/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
